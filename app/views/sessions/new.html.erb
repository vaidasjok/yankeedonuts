<% provide(:title, "Prisijungimas") %>
<% provide(:page_title, 'Prisijungimas') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, 'E-pašto adresas' %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, 'Slaptažodis' %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Jungtis", class: "btn btn-primary" %>
    <% end %>
	<br>
    <p>Naujas vartotojas? <%= link_to "Registruokis!", registruotis_path %></p>
  </div>
</div>