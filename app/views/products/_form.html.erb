<%= form_for(product, :html => {:multiple => true }) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :image, "Pasirinkite nuotrauką" %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :title, 'Pavadinimas' %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description, 'Aprašymas' %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :product_category_id, "Kategorija" %>
    <%= f.collection_select :product_category_id, ProductCategory.all, :id, :title, prompt: '-- Pasirink kategoriją --', :class => 'form-control custom-select' %>
  </div>

  <div class="field">
    <%= f.label :price, 'Kaina' %>
    <%= f.text_field :price %>
  </div>

  <div class="actions">
    <%= f.submit yield(:button_text), class: "btn btn-default" %>
  </div>
<% end %>
