<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="turbolinks-root" content="/app">
    <title> <%= yield(:title) %> || YankeeDonuts.ie</title>
    <meta name="description" content="<%= yield(:description) %>" >
    <meta name="keywords" content="<%= yield(:keywords) %>" >
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= yield(:css) %>

    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>

  <body class="events" >
    <div id="wrap">
      
        <section id="header">
          <div class="header-inner">
            <nav>
              <%= render('shared/menu') %>
            </nav>
              
            <a href="/"><div id="logo"></div></a>
            <a href="https://www.just-eat.ie/restaurants-yankeedonuts-rathmines/menu" id="delivery">Delivery</a>
          </div>
          <div id="juostele_po_meniu">
            <div id="star1" class="star"></div>
            <div id="star2" class="star"></div>
            <div id="star3" class="star"></div>
            <div id="star4" class="star"></div>
            <div id="star5" class="star"></div>
            <div id="star6" class="star"></div>
            <div id="star7" class="star"></div>
            <div id="star8" class="star"></div>
          </div>  
  

        </section>


      <div class="spacer"></div>

      <div class="stars-colored">
        <div class="star blue"></div>
        <div class="star red"></div>
        <div class="star blue"></div>
        <div class="star red"></div>
        <div class="star blue"></div>
        <div class="star red"></div>
        <div class="star blue"></div>
        <div class="star red"></div>
        <div class="star blue"></div>
        <div class="star red last"></div>
      </div> 

      <div id="top1">
      
        <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>"><%= message %></div>
          <% end %>
        <h1>Events</h1>
      </div><!-- #top1 -->


      <div id="top2">
    
      </div>

      
    <div class="form-events">
      <div class="form-inner">
        <h2>Get In Touch</h2>
        <%= form_tag("/send-mail-event", method: "post") do %>

        <div class="first-group big-group">
          <div class="name-group">
            <%= label_tag(:name, "Full Name") %>
            <%= text_field_tag(:name) %>
          </div>
          
          <div class="phone-group">
            <%= label_tag(:phone, "Phone") %>
            <%= text_field_tag(:phone) %>
          </div>

         <div class="email-group">
          <%= label_tag(:email, "E-mail") %>
          <%= text_field_tag(:email) %>
         </div>
        </div>
        <div class="clearfix"></div>
        <div class="second-group big-group">
          <div class=date-group>
            <%= label_tag(:date, "Ocassion Date") %>
            <%= text_field_tag(:date) %>
           </div>

          <div class="time-group">
            <%= label_tag(:time, "Ocassion Time") %>
            <%= text_field_tag(:time) %>
          </div>
        </div>
        
        <div class="third-group big-group">
          <div class="comments-group">
            <%= label_tag(:comments, "Comments") %>
            <%= text_area_tag(:comments) %>
          </div>
        </div>
          
          

          <%= submit_tag "Submit", class: '' %>
        <% end %>
      </div>
    </div>

      <!-- prideti footer ir scripts -->

      <%= render('layouts/footer.html.erb') %>

      <%= debug(params) if Rails.env.development? %>
      <script src="https://use.fontawesome.com/4b67208f55.js"></script>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <%= csrf_meta_tags %>
    </div><!-- #wrap -->
  </body>

</html>
