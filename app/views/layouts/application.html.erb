<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="turbolinks-root" content="/app">
    <title> <%= yield(:title) %> || Plumbing.lt</title>
    <meta name="description" content="<%= yield(:description) %>" >
    <meta name="keywords" content="<%= yield(:keywords) %>" >
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= yield(:css) %>
    <script src="https://use.fontawesome.com/4b67208f55.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>

  <body class="" >
  <div class="top">
    <div class="container">
    <div class="row">
    <div class="header">
      <div id="iskvietimas"> We build effective websites</div>
      <%= render 'shared/menu' %>
    </div><!--header-->
    </div><!--row-->
    </div><!--container-->
  </div><!--top-->
    <div class="page-title">
      <div class="">
        <h1><%= yield(:page_title) %></h1>
      </div>

    </div>
    <div class="container">
    <div class="row">
    </div>
      <div class="row">
        <div class="container-vidinis">
          <div class="welcome">
            <% flash.each do |message_type, message| %>
              <div class="alert alert-<%= message_type %>"><%= message %></div>
            <% end %>
            <%= yield %>
         </div>
        </div>
      </div>
    </div>
    <!-- prideti footer ir scripts -->

    <%= render('layouts/footer.html.erb') %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
