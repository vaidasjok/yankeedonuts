<% if @page.gallery == true %>
<% viso =  @galleries.count %>
<% count = 0 %>
  <% @galleries.each do |gallery| %>
    <% count = count + 1 %>

    <!-- eiles pradzia -->
    <% if ((count % 2) != 0) %>
      <div class="row galerija">
     <% end %>
    <!-- # eiles pradzia -->

<% if gallery.photos.length > 0 %><!-- nuotrauka -->
    <div class="col-md-6">

        <h3><%= gallery.title %></h3>

      <div class="fotorama">
        <% gallery.photos.each do |photo| %>
          <%= image_tag photo.image.url('slide_gallery'), { 'data-caption' => photo.title } %>
        <% end %>
      </div>
    </div>
  <% end %><!-- # nuotrauka -->



    <!-- eiles pabaiga -->
    <% if (((count % 2) == 0) || (count == viso)) %>
      </div>
    <% end %>
    <!-- # eiles pabaiga -->

    <% end %>
<% end %>
