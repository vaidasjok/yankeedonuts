@charset "utf-8";


@import "nivo";
@import "susy";

$susy: (
  global-box-sizing: border-box,
  use-custom: (rem: true
    )
  );

@include border-box-sizing;


$a-tags: 'a:link, a:visited';
$a-tags-hover: 'a:active, a:hover';

/* SPALVOS */
$dark1: #0f1321;
$dark2: #0077A6;
$bold: #008080;
$light1: #74ddd9;
$light2: #caf5ef;
$neutral: #e5e5e5;
$standout: #8C0000;

$salotine: #71e4bd;

@mixin links ($link, $visited, $hover, $active) {
    & {
        color: $link;
        &:visited {
            color: $visited;
        }
        &:hover {
            color: $hover;
        }
        &:active, &:focus {
            color: $active;
        }
    }
}



body {

  background-color: #fff;
  font-family: 'Open Sans', sans-serif;
  text-align: justify;
  font-size: 17px;
  color: #000;
  padding-left: 0px;
  padding-right: 0px;
  padding-top: 0px;
  margin-top: 0px;
  font-size: 17px;
}
#top1 {
  @include susy-breakpoint(670px ) {
    @include container(960px);
  }
}
p {
  text-align: justify;
}
footer p {
  line-height: 150%;
}
ul, ol {
  line-height: 200%;
}
h1 {
  color: #000;
  font-weight: bold;
  font-size: 24px;
  text-align: center;

}
h2, h3 {
  padding: 1em 0 1em;
}
footer h2, footer h3 {
  padding: 0em 0 0em;
}
.logotipas {
  margin-top: 50px;
  width: 200px;
  height: 100px;
  background-image: url("<%= asset_path("logo.png") %>");
  background-size: contain;
  background-repeat: no-repeat;
}
.logotipas img {
  max-width: 100%;
}
#slider {
  z-index: 999;
}
#slide {
  width: 960px;
  max-width: 100%;
  z-index: 999;
  img {
    z-index: 999;
  }
}
#juostele_po_meniu {
  position: relative;
  height: 18px;
  width: 100%;
  @include susy-breakpoint(0px 420px) {
    height: 12px;
    margin-bottom: 8px;
  }
  margin-bottom: 13px;
  background: transparent url("<%= asset_path 'juostele_po_meniu.png' %>") no-repeat center top;
  background-size: cover;
  .star {
    background: transparent url("<%= asset_path 'star.png' %>") no-repeat left top;
    background-size: cover;
    width: 16px;
    height: 16px;
    @include susy-breakpoint(0px 420px) {
      width: 12px;
      height: 12px;
    }
    position: absolute;
  }
  #star1 {
    left: 7%;
  }
  #star2 {
    left: 14%;
  }
  #star3 {
    left: 21%;
  }
  #star4 {
    left: 29%;
  }
  #star5 {
    right: 7%;
  }
  #star6 {
    right: 14%;
  }
  #star7 {
    right: 21%;
  }
  #star8 {
    right: 29%;
  }
}
nav#menu {
  height: 104px;
  ul {
    margin-top: 0px;
  }
  ul li {
    display: inline-block;
    a:link, a:visited {
      color:#fff;
      text-decoration: none;
      font-size: 22px;
    }
    a:hover, a:active {
      color:#fff;
      text-decoration: none;
    }
  }
}
#header {
  position: relative;
  display: block;
  margin: 0px;
  height: 104px;
  padding-top: 15px;
  background: transparent url("<%= asset_path 'header_bg.png' %>") repeat left top;
  z-index: 10001;
  #logo {
    background: transparent url("<%= asset_path 'logo.png' %>") no-repeat center center;
    background-size: cover;
    width: 161px;
    height: 153px;
    @include susy-breakpoint(0px 670px) {
      width: 90px;
      height: 85px;
      top: 50px;
    }
    display: block;
    position: absolute;
    top: 30px;
    left: 0;
    right: 0;
    margin: 0 auto;

    z-index: auto;
  }
}

