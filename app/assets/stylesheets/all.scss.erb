@charset "utf-8";



@import "susy";

$susy: (
  global-box-sizing: border-box,
  use-custom: (rem: true
    )
  );

@include border-box-sizing;


$a-tags: 'a:link, a:visited';
$a-tags-hover: 'a:active, a:hover';

/* SPALVOS */
$dark1: #0f1321;
$dark2: #0077A6;
$bold: #008080;
$light1: #74ddd9;
$light2: #caf5ef;
$neutral: #e5e5e5;
$standout: #8C0000;

$salotine: #71e4bd;

@mixin links ($link, $visited, $hover, $active) {
    & {
        color: $link;
        &:visited {
            color: $visited;
        }
        &:hover {
            color: $hover;
        }
        &:active, &:focus {
            color: $active;
        }
    }
}



body {
  @include container(1200px);
  background-color: #fff;
  font-family: 'Open Sans', sans-serif;
  text-align: justify;
  font-size: 17px;
  color: #000;
}
p {
  text-align: justify;
}
footer p {
  line-height: 150%;
}
ul, ol {
  line-height: 200%;
}
h1 {
  color: #000;
  font-weight: bold;
  font-size: 24px;
  text-align: center;

}
h2, h3 {
  padding: 1em 0 1em;
}
footer h2, footer h3 {
  padding: 0em 0 0em;
}
.logotipas {
  margin-top: 50px;
  width: 200px;
  height: 100px;
  background-image: url("<%= asset_path("logo.png") %>");
  background-size: contain;
  background-repeat: no-repeat;
}
.logotipas img {
  max-width: 100%;
}


/* miscellaneous */

