#juostele_po_meniu {
  position: relative;
  height: 18px;
  width: 100%;
  @include susy-breakpoint(0px 420px) {
    height: 12px;
    margin-bottom: 8px;
  }
  margin-bottom: 13px;
  background: transparent url("<%= asset_path 'juostele_po_meniu.png' %>") no-repeat center top;
  background-size: cover;
  .star {
    background: transparent url("<%= asset_path 'star.png' %>") no-repeat left top;
    background-size: cover;
    width: 16px;
    height: 16px;
    @include susy-breakpoint(0px 420px) {
