/* SPALVOS */
$dark1: #005174;
$dark2: #0077A6;
$bold: #008080;
$light1: #74ddd9;
$light2: #caf5ef;
$neutral: #e5e5e5;
$standout: #8C0000;

@mixin links ($link, $visited, $hover, $active) {
    & {
        color: $link;
        &:visited {
            color: $visited;
        }
        &:hover {
            color: $hover;
        }
        &:active, &:focus {
            color: $active;
        }
    }
}



